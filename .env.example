# 应用配置
APP_NAME=Doc2MD
APP_VERSION=1.0.0
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 文件上传配置
# MAX_FILE_SIZE 单位为字节（默认：100MB = 104857600）
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./tmp/uploads
TEMP_DIR=./tmp/temp

# URL下载配置
# DOWNLOAD_TIMEOUT 单位为秒
DOWNLOAD_TIMEOUT=30
# MAX_DOWNLOAD_SIZE 单位为字节（默认：100MB = 104857600）
MAX_DOWNLOAD_SIZE=104857600

# 支持的文件格式
# 逗号分隔的文件扩展名列表
SUPPORTED_EXTENSIONS=.pdf,.docx,.pptx,.xlsx,.html,.htm

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log


#doling切换gpu\cpu
DOCLING_DEVICE=cpu